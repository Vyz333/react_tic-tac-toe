 /**
    Horizontal Slider Styles
 **/
.switch_h
  position: relative
  display: inline-block
  width: 60px
  height: 34px

.switch_h input
  display:none


.slider_h
  position: absolute
  cursor: pointer
  top: 0
  left: 0
  right: 0
  bottom: 0
  background-color: #ccc
  -webkit-transition: .4s
  transition: .4s

.slider_h:before
  position: absolute
  content: ""
  height: 26px
  width: 26px
  left: 4px
  bottom: 4px
  background-color: white
  -webkit-transition: .4s
  transition: .4s


input:checked + .slider_h
  background-color: #2196F3


input:focus + .slider_h
  box-shadow: 0 0 1px #2196F3;


input:checked + .slider_h:before
  -webkit-transform: translateX(26px)
  -ms-transform: translateX(26px)
  transform: translateX(26px)
